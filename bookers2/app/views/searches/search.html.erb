<div class="container">
  <div class="col-xs-12">
    <% if @range == "User" %>
    <h2>Users search for '<%= @range %>'</h2>
    <table class="table">
        <thead>
            <tr>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
            </tr>
        </thead>
        <% @user.each do |user| %>
        <tbody>
            <tr>
                <th>
                    <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg" , size: "40x40"%>
                </th>
                <th>
                    <%= user.name %>
                </th>
                <th>
                    <%= user.introduction %>
                </th>
            </tr>
        </tbody>
    <% end %>
    <% else %>
    <h2>Books search for '<%= @range %>'</h2>
    <table class="table">
        <thead>
            
            <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
        </thead>
        <% @book.each do |book| %>
        <tbody>
            <tr>
                <th>
                    <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg" , size: "40x40"%>
                </th>
                
                <th>
                    <%= book.title %>
                </th>
                <th>
                    <%= book.body %>
                </th>
            </tr>
        </tbody>
        <% end %>
    <% end %>
    </table>
  </div>
</div>
